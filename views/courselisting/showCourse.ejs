        <!-- Left Section -->
        <div class="col-lg-8 mb-4">
            <h2 class="fw-bold text-primary"><%= Course.title %></h2>

            <ul class="nav nav-tabs mt-4 mb-3">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Overview</a>
                </li>
            </ul>

            <p><strong>Description</strong><br>
                <%= Course.description %>
                <% if (Course.overview && Course.overview.details) { %>
                    <p>
                        <%= Course.overview.details %>
                    </p>
                <% } else { %>
                    <p><em>No overview added yet.</em></p>         
                <% } %>
            </p>

            <p><strong>Starts 2nd August 2024</strong></p>

